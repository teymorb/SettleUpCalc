{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://calculator.settleup.earth/calculator.schema.json",
  "title": "Calculator Schema",
  "description": "SettleUp Earth Carbon Calculator Schema",
  "type": "object",
  "definitions": {
    "question": {
      "type": "object",
      "properties": {
        "question_number": {
          "type": "number"
        },
        "question_type": {
          "type": "string",
          "oneOf": ["text", "multiple_choice"]
        },
        "question_text": {
          "type": "string"
        },
        "question_secondary_text": {
          "type": "string"
        },
        "question_score_value": {
          "type": ["number", "array"]
        },
        "question_answer": {
          "type": "integer"
        },
        "question_choices": {
          "type": "object",
          "$ref": "#definitions/question_choice"
        }
      },
      "required": ["question_number", "question_type", "question_text"]
    },
    "question_choice": {
      "type": "object",
      "properties": {
        "choice_id": { "type": "number" },
        "value": { "type": "string" }
      }

    }
  },
  "properties": {
    "id": { "type": "number" },
    "questions": {
      "type": "array",
      "items": {
        "$ref": "#definitions/question"
      }
    }
  },
  "required": [
    "questions"
  ]
}